<script type="text/javascript" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
<script>
  var dataTables = {
    init: function () {
      $(document).ready(function () {
        $('#datatables').DataTable({
          processing: true,
          // "serverSide": true,
          ajax: {
            url: "/Mpembayaran/getMhsCl",
            dataType: "json",
            type: "POST",
            data: {
              id: "<%= idMhs %>"
            }
          },
          columns: [
            // {data: "idMahasiswa"},
            {
              data: "namaLengkap"
            },
            {
              data: "namaSekolah"
            },
            {
              data: "namaOrangTua"
            },
            {
              data: "status",
              render: function (st) {
                if (st === 1) {
                  return "Belum Dibayarkan"
                } else if (st === 2) {
                  return "Menunggu Konfirmasi"
                } else {
                  return "Lunas"
                }
              }
            },
          ]
        });
      });
    }
  }

  jQuery(document).ready(function () {
    dataTables.init();
  });

  $(document).ready(function () {
    $.ajax({
      url: "/Mpembayaran/getMhsCl",
      dataType: "json",
      type: "POST",
      data: {
        id: "<%= idMhs %>"
      },
      success: function (res) {
        if (res.code === 200) {
          for (var i = 0; i < res.data.length; i++) {
            $("#nam").text(res.data[i].namaLengkap)
            $("#alm").text(res.data[i].alamat)
            $("#telp").text("Phone: " + res.data[i].telepon)
            $("#emil").text("Email: " + res.data[i].email)
            $("#tgl").text(new Date())
            var a = new Date().getDate()
            var b = new Date().getMonth() + 1
            var c = new Date().getFullYear()
            $("#tanggal").text("Amount Due " + a + "/" + b + "/" + c)
            if (res.data[i].status === 1) {
              $("#add_payment").prop("disabled", false)
            } else {
              $("#add_payment").prop("disabled", true)
            }
          };
        } else {
          console.log(res.data)
        }
      }
    })
  })

  function liveP(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function (e) {
        $('#image').attr('src', e.target.result);
      }
      reader.readAsDataURL(input.files[0]);
    }
  }

  $('#v_fileGbr').change(function () {
    liveP(this);
  });

  $(document).ready(function () {
    $("#add_button").click(function () {
      var type = "POST";
      var url = "/Mpembayaran/saveImg";
      var file = document.getElementById("v_fileGbr").files[0];
      var data = new FormData();
      data.append("v_fileGbr", file);
      $.ajax({
        type: type,
        url: url,
        contentType: false,
        processData: false,
        // dataType: "json",
        data: data,
        success: function (res) {
          if (res.code === 200) {
            $.ajax({
              type: "post",
              url: "/Mpembayaran/save",
              data: $("#add_form").serialize(),
              dataType: "json",
              success: function (rs) {
                if (rs.code === 200) {
                  swal({
                    title: "Success!",
                    text: rs.message,
                    icon: "success",
                    button: "Close!",
                  }).then(function () {
                    $('#add_form')[0].reset();
                    $("#add_modal").modal('hide');
                    $('#datatables').DataTable()
                      .ajax.reload();
                    location.reload();
                  })
                } else {
                  swal({
                    title: "Server Error!",
                    text: rs.message,
                    icon: "error",
                    button: "Close!",
                  });
                }
              }
            })
          } else {
            swal({
              title: "Server Error!",
              text: "Gagal menambahkan gambar!!",
              icon: "error",
              button: "Close!",
            });
          }
        }
      });
    });
  });
</script>