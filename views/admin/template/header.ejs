<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">
  function logout() {
    swal({
      title: "Are you sure?",
      text: "",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    }).then((e) => {
      if(e) {
        $.ajax({
          type: "POST",
          url: "/Mlogin/logout",
          dataType: "json",
          success: (res) => {
            if(res.code == 200) {
              swal({
                title: "Success!",
                text: res.message,
                icon: "success",
                button: false,
                timer: 1500
              }).then(() => {
                window.location.href=res.redirect;
              });
            }
          }
        })
      }
    });
  }
</script>