<script>
var dataTables = {
    init: function() {
        $(document).ready(function() {
            $('#datatables').DataTable({
                processing: true,
                // "serverSide": true,
                ajax: {
                    url: "/MsoalTes",
                    dataType: "json",
                    type: "POST"
                },
                columns: [
                    // {data: "idMahasiswa"},
                    {data: "pertanyaan", width: '200px'},
                    {data: "pg1", width: '100px'},
                    {data: "pg2", width: '100px'},
                    {data: "pg3", width: '100px'},
                    {data: "pg4", width: '100px'},
                    {data: "pg5", width: '100px'},
                    {data: "pg6", width: '100px'},
                    {data: "idSoalTes", render: function (id) {
                        var but = '<button type="button" class="btn btn-success" data-toggle="modal" data-target="#edit_modal" onclick="edit('+ id +')">Edit</button> <button type="button" class="btn btn-danger" onclick="delte('+ id +')">Delete</button>';
                        return but; 
                    },
                    width: '115px'},
                ]
            });
        });
    }
}

jQuery(document).ready(function() {
    dataTables.init();
});

$(document).ready(function() {
    $("#add_button").click(function() {
        var type = "POST";
        var url  = "/MsoalTes/save";
        var data = $("#add_form").serialize();
        $.ajax({
            type: type,
            url: url,
            dataType: "json",
            data: data,
            success: function(res) {
                if(res.code === 200 ) {
                    swal({
                        title: "Success!",
                        text: res.message,
                        icon: "success",
                        button: "Close!",
                    }).then(function() {
                        $('#add_form')[0].reset();
                        $("#add_modal").modal('hide');
                        $('#datatables').DataTable().ajax.reload();
                    })
                } else {
                    swal({
                        title: "Server Error!",
                        text: res.message,
                        icon: "error",
                        button: "Close!",
                    });
                }
            }
        });
    });
});

$(document).ready(function() {
    $("#edit_button").click(function() {
        var type = "POST";
        var url  = "/MsoalTes/update";
        var data = $("#edit_form").serialize();
        $.ajax({
            type: type,
            url: url,
            dataType: "json",
            data: data,
            success: function(res) {
                if(res.code === 200 ) {
                    swal({
                        title: "Success!",
                        text: res.message,
                        icon: "success",
                        button: "Close!",
                    }).then(function() {
                        $('#edit_form')[0].reset();
                        $("#edit_modal").modal('hide');
                        $('#datatables').DataTable().ajax.reload();
                    })
                } else {
                    swal({
                        title: "Server Error!",
                        text: res.message,
                        icon: "error",
                        button: "Close!",
                    });
                }
            }
        });
    });
});

function edit(id) {
    var type = "POST";
    var url  = "/MsoalTes/edit";
    var data = {id: id};
    $.ajax({
        type: type,
        url: url,
        dataType: "json",
        data: data,
        success: function(res) {
            if (res.code === 200 ) {
                for (var i = 0; i < res.data.length; i++) {
                    $('#ve_id').val(res.data[i].idSoalTes);
                    $('#ve_pertanyaan').val(res.data[i].pertanyaan);
                    $('#ve_pg1').val(res.data[i].pg1);
                    $('#ve_pg2').val(res.data[i].pg2);
                    $('#ve_pg3').val(res.data[i].pg3);
                    $('#ve_pg4').val(res.data[i].pg4);
                    $('#ve_pg5').val(res.data[i].pg5);
                    $('#ve_pg6').val(res.data[i].pg6);
                }
            } else {
                console.log(res.data)
            }
        }
    })
}

function delte(id) {
    swal({
        title: "Are you sure?",
        text: "Once deleted, you will not be able to recover this imaginary file!",
        icon: "warning",
        buttons: true,
        dangerMode: true,
    }).then(function(e) {
        if(e) {
            var type = "POST";
            var url  = "/MsoalTes/delete";
            var data = {id: id};
            $.ajax({
                type: type,
                url: url,
                data: data,
                success: function(res) {
                    if (res.code === 200 ) {
                        swal({
                            title: "Success!",
                            text: res.message,
                            icon: "success",
                            button: "Close!",
                        }).then(function() {
                            $('#datatables').DataTable().ajax.reload();
                        });
                    } else {
                        swal({
                            title: "Server Error!",
                            text: res.message,
                            icon: "error",
                            button: "Close!",
                        });
                    }
                }
            })
        } else {
            swal({
                title: "Success!",
                text: "Data Gagal Dihapus!",
                icon: "success",
                button: "Close!",
            });
        }
    })
}

</script>