        </div>
        <form id="edit_form">
            <div class="modal-body">
                <input type="hidden" class="form-control" name="ve_id" id="ve_id" placeholder="Masukan Nama..." required oninvalid="this.setCustomValidity('data tidak boleh kosong')" oninput="setCustomValidity('')">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nama Lengkap</label>
                    <input type="text" class="form-control" name="ve_nama" id="ve_nama" placeholder="Masukan Nama..." required oninvalid="this.setCustomValidity('data tidak boleh kosong')" oninput="setCustomValidity('')">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Jabatan</label>
                    <input type="text" class="form-control" name="ve_jabatan" id="ve_jabatan" placeholder="Masukan Jabatan..." required oninvalid="this.setCustomValidity('data tidak boleh kosong')" oninput="setCustomValidity('')">
                </div>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
