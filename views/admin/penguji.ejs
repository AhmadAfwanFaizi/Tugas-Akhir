<!-- DataTables -->
<script type="text/javascript" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

<script>
var dataTables = {
    init: function() {
        $(document).ready(function() {
            $('#datatables').DataTable({
                processing: true,
                // "serverSide": true,
                ajax: {
                    url: "/Mpenguji",
                    dataType: "json",
                    type: "POST"
                },
                columns: [
                    // {data: "idMahasiswa"},
                    {data: "namaPenguji"},
                    {data: "jabatan"},
                    {data: "idPenguji", render: function (id) {
                        var but = '<button type="button" class="btn btn-success" data-toggle="modal" data-target="#edit_modal" onclick="edit('+ id +')">Edit</button> <button type="button" class="btn btn-danger" onclick="delte('+ id +')">Delete</button>';
                        return but; 
                    },
                    width: '115px'},
                ]
            });
        });
    }
}

jQuery(document).ready(function() {
    dataTables.init();
});

$(document).ready(function() {
    $("#add_button").click(function() {
        var type = "POST";
        var url  = "/Mpenguji/save";
        var data = $("#add_form").serialize();
        $.ajax({
            type: type,
            url: url,
            dataType: "json",
            data: data,
            success: function(res) {
                if(res.code === 200 ) {
                    swal({
                        title: "Success!",
                        text: res.message,
                        icon: "success",
                        button: "Close!",
                    }).then(function() {
                        $('#add_form')[0].reset();
                        $("#add_modal").modal('hide');
                        $('#datatables').DataTable().ajax.reload();
                    })
                } else {
                    swal({
                        title: "Server Error!",
                        text: res.message,
                        icon: "error",
                        button: "Close!",
                    });
                }
            }
        });
    });
});

$(document).ready(function() {
    $("#edit_button").click(function() {
        var type = "POST";
        var url  = "/Mpenguji/update";
        var data = $("#edit_form").serialize();
        $.ajax({
            type: type,
            url: url,
            dataType: "json",
            data: data,
            success: function(res) {
                if(res.code === 200 ) {
                    swal({
                        title: "Success!",
                        text: res.message,
                        icon: "success",
                        button: "Close!",
                    }).then(function() {
                        $('#edit_form')[0].reset();
                        $("#edit_modal").modal('hide');
                        $('#datatables').DataTable().ajax.reload();
                    })
                } else {
                    swal({
                        title: "Server Error!",
                        text: res.message,
                        icon: "error",
                        button: "Close!",
                    });
                }
            }
        });
    });
});

function edit(id) {
    var type = "POST";
    var url  = "/Mpenguji/edit";
    var data = {id: id};
    $.ajax({
        type: type,
        url: url,
        dataType: "json",
        data: data,
        success: function(res) {
            if (res.code === 200 ) {
                for (var i = 0; i < res.data.length; i++) {
                    $('#ve_id').val(res.data[i].idPenguji);
                    $('#ve_nama').val(res.data[i].namaPenguji);
                    $('#ve_jabatan').val(res.data[i].jabatan);
                }
            } else {
                console.log(res.data)
            }
        }
    })
}

function delte(id) {
    swal({
        title: "Are you sure?",
        text: "Once deleted, you will not be able to recover this imaginary file!",
        icon: "warning",
        buttons: true,
        dangerMode: true,
    }).then(function(e) {
        if(e) {
            var type = "POST";
            var url  = "/Mpenguji/delete";
            var data = {id: id};
            $.ajax({
                type: type,
                url: url,
                data: data,
                success: function(res) {
                    if (res.code == 200 ) {
                        swal({
                            title: "Success!",
                            text: res.message,
                            icon: "success",
                            button: "Close!",
                        }).then(function() {
                            $('#datatables').DataTable().ajax.reload();
                        });
                    } else {
                        swal({
                            title: "Server Error!",
                            text: res.message,
                            icon: "error",
                            button: "Close!",
                        });
                    }
                }
            })
        } else {
            swal({
                title: "Success!",
                text: "Data Gagal Dihapus!",
                icon: "success",
                button: "Close!",
            });
        }
    })
}

</script>