<!DOCTYPE html>
<htm>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Cimone | Log in</title>
  <link rel="icon" href="./assets/admin/dist/img/logo1.png">
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="./assets/admin/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- icheck bootstrap -->
  <!-- <link rel="stylesheet" href="./assets/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css"> -->
  <!-- Theme style -->
  <link rel="stylesheet" href="./assets/admin/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<class class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a href=""><b>LP3I</b>Cimone</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <form id="login_form">
        <div class="input-group mb-3">
          <input type="email" id="v_email" name="v_email" class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" id="v_password" name="v_password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <button type="button" onclick="login()" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <div class="social-auth-links text-center mb-3">
        <p>- OR -</p>
        <a href="/" class="btn btn-block btn-danger">
          <i class="fa fa-arrow-left"></i> &nbsp; Back To Website
        </a>
      </div>
      <!-- /.social-auth-links -->
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->

<!-- jQuery -->
<script src="./assets/admin/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="./assets/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="./assets/admin/dist/js/adminlte.min.js"></script>

</class>
  <!-- SweetAlert -->
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script>
    $("#v_email").keypress(function (e) {
      if (e.keyCode == 13) {
        login()
      }
    })

    $("#v_password").keypress(function (e) {
      if (e.keyCode == 13) {
        login()
      }
    })

    function login() {
      var type = "POST";
      var url = "/Mlogin";
      var data = $("#login_form").serialize();
      $.ajax({
        type: type,
        url: url,
        dataType: "json",
        data: data,
        success: function(res) {
          if(res.code == 200) {
            swal({
              title: "Success!",
              text: res.message,
              icon: "success",
              button: false,
              timer: 1500
            }).then(function() {
              window.location.href=res.redirect;
            })
          } else {
            swal({
              title: "Server Error!",
              text: res.message,
              icon: "error",
              button: "CLose!"
            })
          }
        }
      })
    }
  </script>
</body>

</html>
